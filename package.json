{
  "name": "potpack",
  "version": "1.0.0",
  "description": "A tiny library for packing 2D rectangles (for sprite layouts)",
  "main": "index",
  "module": "index.mjs",
  "files": [
    "index.mjs",
    "index.js"
  ],
  "scripts": {
    "test": "eslint index.mjs",
    "build": "rollup -c",
    "start": "rollup -w"
  },
  "eslintConfig": {
    "extends": "mourner",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/potpack.git"
  },
  "keywords": [
    "algorithms",
    "sprites",
    "bin packing",
    "geometry",
    "rectangles"
  ],
  "author": "Vladimir Agafonkin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mapbox/potpack/issues"
  },
  "homepage": "https://mapbox.github.io/potpack/demo.html",
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-mourner": "^2.0.3",
    "rollup": "^0.64.1",
    "rollup-plugin-buble": "^0.19.2"
  }
}
